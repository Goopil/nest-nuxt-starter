{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2018",
    "sourceMap": true,
    "outDir": "./dist/",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@server/*": ["server/*"],
      "@client/*": ["client/*"],
      "@common/*": ["common/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
