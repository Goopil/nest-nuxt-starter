{
  "name": "nestjs-nuxt-starter",
  "version": "0.0.3",
  "description": "A nest nuxt starter",
  "author": "Goopil <me@goopil.org>",
  "license": "MIT",
  "private": true,
  "main": "dist/server/main.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "predev": "rimraf dist",
    "build": "cross-env mode=production NODE_ENV=production concurrently \"nuxt build -c server/nuxt/nuxt.config.ts\" \"nest build --webpack --webpackPath webpack.config.js\"",
    "format": "prettier --write \"server/**/*.ts\" \"client/**/*\" \"test/**/*.ts\"",
    "dev": "cross-env NODE_ENV=development nest build --webpack --webpackPath webpack.config.js --watch",
    "start": "node dist/server/main",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --passWithNoTests",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "8.2.3",
    "@nestjs/core": "8.2.3",
    "@nestjs/platform-express": "8.2.3",
    "@nestjs/platform-fastify": "8.2.3",
    "@nuxtjs/axios": "5.13.6",
    "nuxt": "2.15.8",
    "nuxt-precompress": "0.5.9",
    "nuxt-property-decorator": "2.9.1",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.4.0",
    "tslib": "2.3.1"
  },
  "devDependencies": {
    "@nestjs/cli": "8.1.5",
    "@nestjs/schematics": "8.0.5",
    "@nestjs/testing": "8.2.3",
    "@nuxt/types": "2.15.8",
    "@nuxt/typescript-build": "2.1.0",
    "@types/connect": "3.4.35",
    "@types/express": "4.17.13",
    "@types/jest": "27.0.3",
    "@types/node": "16.11.11",
    "@types/supertest": "2.0.11",
    "clean-webpack-plugin": "4.0.0",
    "concurrently": "6.4.0",
    "cross-env": "7.0.3",
    "jest": "27.4.3",
    "prettier": "2.5.0",
    "rimraf": "3.0.2",
    "run-script-webpack-plugin": "0.0.11",
    "sass": "1.44.0",
    "supertest": "6.1.6",
    "ts-jest": "27.0.7",
    "ts-loader": "8.3.0",
    "ts-node": "10.4.0",
    "tsconfig-paths": "3.12.0",
    "tslint": "6.1.3",
    "typescript": "4.5.2",
    "webpack": "4.46.0",
    "webpack-cli": "4.9.1",
    "webpack-node-externals": "3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
